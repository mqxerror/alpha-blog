<% if @article.errors.any? %>
	<ul>
	<% @article.errors.full_messages.each do |error_mesg| %>
		<li> <%= error_mesg %> </li>
	<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>
	<p><%= f.label :title %> <br/>
	<%= f.text_field :title %><br/></p>

	<p><%= f.label :description %><br/>
	<%= f.text_area :description %></p>

	<p>
	  <%= f.submit %><br/>
	</p>

<% end %>
<%= link_to 'Index articles', articles_path %>